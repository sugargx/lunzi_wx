.list-text {
  font-size: 16px;
  margin-left: 5px;
}


.list-view-groups {
  display: flex;
  height: 40px;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  border-bottom: 1px solid lightgray;
}


.list-image {
  margin-left: 5px;
  width: 24px;
  height: 24px;
}


.list-view-count {
  width: 10%;
}


.list-view-image {
  width: 10%;
}


.list-view-text {
  width: 80%;
}


.list-view-friend {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  border-bottom: 1px solid lightgray;
}


.list-friend-image {
  width: 45px;
  height: 45px;
  margin: 3px;
  margin-left: 10px;
  border-radius: 50%;
}


.list-friend-text {
  font-size: 16px;
  margin-left: 5px;
}


.list-view-friend:hover {
  border-left: 3px solid lightgreen;
  border-right: 3px solid lightcoral;
}

.item-list{
    position: relative;
    width: 100%;
    height: 138rpx;
    margin-left: 20rpx;
}

.item-info, .item-oper{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-bottom: 1px solid #ccc;
}

.item-info{
    display: flex;
    padding: 20rpx 20rpx 20rpx 0;
    z-index: 2;
    background: white;
    transition: left 0.2s ease-in-out;
}

.item-list:first-child{
    border-top: 1px solid #ccc;
}

.item-oper{
    display: flex;
    justify-content: flex-end;
}

.oper-delete{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150rpx;
    z-index: 1;
    color: white;
    background: red;
    border-left:0.5px white solid
}
